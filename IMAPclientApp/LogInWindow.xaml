<Window x:Class="IMAPclientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMAPclientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="280"
        WindowStartupLocation="CenterScreen">
    <Border Padding="15">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Log In Details" FontWeight="Bold"/>
            <TextBlock Text="Email:" Margin="0 10 0 0"/>
            <TextBox Name="emailTextBox" Padding="2" Background="Linen"/>
            <TextBlock Text="Password:" Margin="0 10 0 0"/>
            <PasswordBox Name="passwordBox" Padding="2" PasswordChar="*" Background="Linen"/>
            <Button Name="loginButton" Click="loginButton_Click" Content="Log In" Margin="0 20" Width="120"/>
        </StackPanel>
    </Border>
</Window>
